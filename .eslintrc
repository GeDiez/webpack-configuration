{
  "extends": "react-app",
  "plugins": [
    "prettier"
  ],
  "globals": {
    "t": true,
    "translations": true,
    "createStore": true,
    "initialState": true
  },
  "rules": {
    "prettier/prettier": ["error", {
      "singleQuote": true,
      "trailingComma": "all"
    }],
    "radix": 0,
    "no-unused-vars": ["error", {
      "args": "after-used"
    }],
    "no-console": "error",
    "no-var": "error",
    "jsx-a11y/href-no-hash": "off",
    "jsx-a11y/anchor-is-valid": ["warn", { "aspects": ["invalidHref"] }]
  }
}